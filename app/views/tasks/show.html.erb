<h2><%= @task.title %></h2>
<p><%= @task.details %></p>
<p><%= checkbox(@task) %></p>

<%= link_to "Back to list", tasks_path %>
<%= link_to "Edit task", edit_path %>
<%= link_to "Delete #{@task.title}",
            task_path(@task),
            method: :delete,
            data: { confirm: "Are you sure?" } %>
